<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?> <?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>       <?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane id="rootPane" prefHeight="600.0" prefWidth="800.0"
           stylesheets="@styles.css"
           xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.footprinttracker.Controller.LoginController">

    <VBox alignment="CENTER" spacing="20.0"
          maxWidth="400.0" maxHeight="450.0"
          styleClass="login-card">

        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
        </padding>

        <Label styleClass="title-label" text="Footprint Tracker">
            <font><Font name="System Bold" size="28.0" /></font>
        </Label>
        <Label text="Bienvenido de nuevo, cuida tu huella." textFill="#757575" />

        <VBox maxWidth="300.0" spacing="10.0">
            <Label text="Email" />
            <TextField fx:id="txtEmail" promptText="ejemplo@email.com" />
            <Label text="Contraseña" />
            <PasswordField fx:id="txtPassword" promptText="******" />
        </VBox>

        <Label fx:id="lblError" textFill="RED" visible="false" />

        <Button fx:id="btnLogin" defaultButton="true" mnemonicParsing="false"
                onAction="#handleLogin" prefWidth="200.0"
                styleClass="primary-button" text="Iniciar Sesión" />

        <HBox alignment="CENTER" spacing="5.0">
            <Label text="¿No tienes cuenta?" textFill="#757575"/>
            <Hyperlink  fx:id="linkRegistro" text="Regístrate aquí"
                       onAction="#abrirRegistro"
                       styleClass="link-button"/>
        </HBox>

    </VBox>
</StackPane>